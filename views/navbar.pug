header
	nav.navbar.bg-royalblue.navbar-dark.navbar-expand
		a.navbar-brand(href='') TeaWork
			//- img(src="/images/logo.png", alt="TeaWork", style="width:40px")	
		ul.navbar-nav
			each link, title in menu
				if selected === title
					li.nav-item.active
						a.nav-link(href=link)=title
				else
					li.nav-item
						a.nav-link(href=link)=title
		form(method="POST", action="/")
			.input-group
				input.form-control(type="search", name="cafeName", placeholder="Search for a café")
				.input-group-append
					button.btn.btn-light
						i.fas.fa-search.fa-spin(style="color: royalblue")


