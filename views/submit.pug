extends cafes

block active
	-var selected = 'Submit';

block content
	include navbar
	.jumbotron.text-center
		h1 #{title}
		p #{about}
	.container-fluid
		form(method="POST", action='/cafes/submit')
			.row
				.col-sm-4.c1
					//- Cafe name
					.input-group.m-3.w-100
						.input-group-prepend
							span.input-group-text Cafe Name
						input.form-control(name="name", type='text', placeholder="Caf√© Name")
						.input-group-append
							select.btn.btn-outline-secondary.dropdown-toggle(data-toggle="dropdown", name="type")
								each type in cafeTypes
									option(type=type)=type

					//-  Wi-fi
					.input-group.m-3.w-100
						.input-group-prepend
							span.input-group-text Is there free Wi-Fi
						.input-group-append
							.input-group-text
								input(name="wifiAvailable", type="checkbox")
					.input-group.m-3.w-100
						.input-group-prepend
							span.input-group-text Network Name
						input.form-control(name='wifiName', placeholder='Network Name')
					.input-group.m-3.w-100
						.input-group-prepend
							span.input-group-text Password
						input.form-control(name='wifiPassword', placeholder="Password")
					.input-group.m-3.w-100
						.input-group-prepend
							span.input-group-text Is it Wi-Fi fast
						.input-group-append
							.input-group-text
								input(name="wifiFast", type="checkbox")
				.col-sm-4.c2
					//-  Outlet
					.input-group.m-3.w-100
						.input-group-prepend
							span.input-group-text Outlet
						.input-group-append
							.input-group-text
								input(name="outlet", type="checkbox")

					//-  Bathroom
					.input-group.m-3.w-100
						.input-group-prepend
							span.input-group-text Are there bathrooms
						.input-group-append
							.input-group-text
								input(name="bathroomAvailable", type="checkbox")
					.input-group.m-3.w-100
						.input-group-prepend
							span.input-group-text Are they locked?
						.input-group-append
							.input-group-text
								input(name="bathroomLocked", type="checkbox")
					.input-group.m-3.w-100
						.input-group-prepend
							span.input-group-text If so, is it locked by key
						.input-group-append
							.input-group-text
								input(name="bathroomKey", type="checkbox")
					.input-group.m-3.w-100
						.input-group-prepend
							span.input-group-text If not, what is the code
						.input-group-append
							.input-group-text
								input(name="bathroomCode", type="checkbox")
					.input-group.m-3.w-100
						.input-group-prepend
							span.input-group-text Are they clean
						.input-group-append
							.input-group-text
								input(name="bathroomClean", type="checkbox")
				.col-sm-4.c3
					//-  Clean
					.input-group.m-3.w-100
						.input-group-prepend
							span.input-group-text Is the place clean
						.input-group-append
							.input-group-text
								input(name="clean", type="checkbox")
					//-  Busy
					.input-group.m-3.w-100
						span.input-group-text When is the place busy
					.input-group.m-3.w-100
						.input-group-prepend
							span.input-group-text Morning
						.input-group-append
							.input-group-text
								input(name="busyMorning", type="checkbox")
						.input-group-append
							span.input-group-text Noon
						.input-group-append
							.input-group-text
								input(name="busyNoon", type="checkbox")
						.input-group-append
							span.input-group-text Night
						.input-group-append
							.input-group-text
								input(name="busyNight", type="checkbox")

					//-  Parking					
					.input-group.m-3.w-100
						.input-group-prepend
							span.input-group-text Free parking nearby
						.input-group-append
							.input-group-text
								input(name="parking", type="checkbox")
			//-  Save
			.row
				.col-sm-4
				.col-sm-4
					.btn-group.m-3
						button.btn.btn.btn-primary(name="save") Save
						button.btn.btn.btn-outline-secondary(name="reset", type="reset") Reset