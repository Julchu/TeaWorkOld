extends layout

block active
	-var selected = 'Caf√©s';

block content
	.jumbotron.jumbotron-fluid.text-center.bg-muted
		h1.text-center #{title}
		p.text-center Welcome to #{title}
	.noselect
		if content
			each cafe in content
				p Name: #{cafe.name}

				p Type: #{cafe.type}

				if (cafe.wifi.available)
					p Wifi available: #{cafe.wifi.available}
					p Wifi name: #{cafe.wifi.name}
					p Wifi password: #{cafe.wifi.password}
					p Wifi speed: #{cafe.wifi.fast}
				else
					p No free wi-fi

				p Outlet: #{cafe.outlet}

				if (cafe.bathroom.available)
					if (cafe.bathroom.locked)
						if (cafe.bathroom.key)
							p Bathroom requires key: #{cafe.bathroom.key}
						else
							p Bathroom code: #{cafe.bathroom.code}
					p Bathroom cleanliness: #{cafe.bathroom.clean}
				else
					p No bathrooms

				p Cleanliness of the #{cafe.type}: #{cafe.clean}

				p Busy: #{cafe.busy}

