extends layout

block active
	-var selected = 'Caf√©s';

block content
	//- .jumbotron.text-center
	//- 	h1 #{title}
	//- 	p #{about}
	.noselect
	if content
		p Name: #{content.name}

		p Type: #{content.type}

		if (content.wifi.available)
			p Wifi available: #{content.wifi.available}
			p Wifi name: #{content.wifi.name}
			p Wifi password: #{content.wifi.password}
			p Wifi speed: #{content.wifi.fast}
		else
			p No free wi-fi

		p Outlet: #{content.outlet}

		if (content.bathroom.available)
			if (content.bathroom.locked)
				if (content.bathroom.key)
					p Bathroom requires key: #{content.bathroom.key}
				else
					p Bathroom code: #{content.bathroom.code}
			p Bathroom cleanliness: #{content.bathroom.clean}
		else
			p No bathrooms

		p Cleanliness of the #{content.type}: #{content.clean}

		p Busy: #{content.busy}

		br
		br
		br

